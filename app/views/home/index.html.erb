<div class="container">
  <div class="text-center">
  <%= form_tag login_path, method: :post  do %>
      <p>User:</p>
      <p><%= text_field_tag :user_name %></p>

      <p>Dialect:</p>
      <p><%= select_tag :dialect, options_for_select(['yoda', 'pirate', 'minion']) %></p>

      <p>Room:</p>
      <p><%= select_tag :chat_room, options_from_collection_for_select(@rooms, 'id', 'name') %></p>
      <p><%= submit_tag :login %></p>
  <% end %>
  </div>
</div>